<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Style.Andromeda.Clickable.Borderless" parent="">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="colorControlHighlight">@color/gray500</item>
    </style>

    <style name="Style.Andromeda.Clickable.Rectangle" parent="">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="colorControlHighlight">@color/gray500</item>
    </style>

    <style name="Style.Andromeda.Dialog" parent="MaterialAlertDialog.MaterialComponents">
        <item name="shapeAppearance">@style/Style.Andromeda.Dialog.ShapeAppearance.MediumComponent</item>
    </style>

    <style name="Style.Andromeda.Dialog.Title.Icon" parent="MaterialAlertDialog.MaterialComponents.Title.Icon">
        <item name="tint">@color/black</item>
    </style>

    <style name="Style.Andromeda.Dialog.Title.Panel" parent="MaterialAlertDialog.MaterialComponents.Title.Panel">
        <item name="android:gravity">center</item>
<!--         <item name="android:orientation">vertical</item> -->
    </style>

    <style name="Style.Andromeda.Dialog.Title.Text" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">8dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Style.Andromeda.Dialog.Body.Text" parent="MaterialAlertDialog.MaterialComponents.Title.Panel">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">6dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:lineSpacingExtra">4dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Style.Andromeda.Dialog.Button.Positive" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="rippleColor">@color/light_blue_100</item>
        <item name="android:textColor">@color/light_blue_400</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="shapeAppearance">@style/Style.Andromeda.Dialog.ShapeAppearance.SmallComponent </item>
    </style>

    <style name="Style.Andromeda.Dialog.Button.Neutral" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="rippleColor">@color/light_blue_100</item>
        <item name="android:textColor">@color/gray500</item>
        <item name="android:textSize">14sp</item>
        <item name="shapeAppearance">@style/Style.Andromeda.Dialog.ShapeAppearance.SmallComponent </item>
    </style>

    <style name="Style.Andromeda.Dialog.Button.Negative" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="rippleColor">@color/light_blue_100</item>
        <item name="android:textColor">@color/gray500</item>
        <item name="android:textSize">14sp</item>
        <item name="shapeAppearance">@style/Style.Andromeda.Dialog.ShapeAppearance.SmallComponent </item>
    </style>

    <style name="Style.Andromeda.Dialog.ShapeAppearance.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="Style.Andromeda.Dialog.ShapeAppearance.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <style name="Style.Andromeda.Dialog.ShapeAppearance.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
    </style>

    <style name="Style.Andromeda.FontFamily" parent="">
        <item name="android:fontFamily">@font/vazirmatn_regular</item>
        <item name="fontFamily">@font/vazirmatn_regular</item>
        <item name="android:textStyle">normal</item>
    </style>

</resources>