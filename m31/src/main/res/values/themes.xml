<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Andromeda.Exception" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:theme">@style/Style.Andromeda.FontFamily</item>
        <item name="android:forceDarkAllowed" tools:ignore="NewApi">false</item>
        <item name="android:statusBarColor">?attr/colorPrimaryDark</item>
        <item name="statusBarBackground">?attr/colorPrimaryDark</item>
        <item name="android:fontFamily">@font/vazirmatn_regular</item>
        <item name="colorPrimaryDark">@color/blue_grey_900</item>
        <item name="fontFamily">@font/vazirmatn_regular</item>
        <item name="colorPrimary">@color/blue_grey_800</item>
        <item name="colorAccent">@color/blue_500</item>
    </style>

    <style name="Theme.Andromeda.Dialog" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="theme">@style/Style.Andromeda.FontFamily</item>
        <item name="alertDialogStyle">@style/Style.Andromeda.Dialog</item>
        <item name="android:background">@color/white</item>
        <item name="materialAlertDialogTitlePanelStyle">@style/Style.Andromeda.Dialog.Title.Panel</item>
        <item name="materialAlertDialogTitleIconStyle">@style/Style.Andromeda.Dialog.Title.Icon</item>
        <item name="materialAlertDialogTitleTextStyle">@style/Style.Andromeda.Dialog.Title.Text</item>
        <item name="materialAlertDialogBodyTextStyle">@style/Style.Andromeda.Dialog.Body.Text</item>
        <item name="buttonBarPositiveButtonStyle">@style/Style.Andromeda.Dialog.Button.Positive</item>
        <item name="buttonBarNegativeButtonStyle">@style/Style.Andromeda.Dialog.Button.Negative</item>
        <item name="buttonBarNeutralButtonStyle">@style/Style.Andromeda.Dialog.Button.Neutral</item>
        <item name="dialogCornerRadius">10dp</item>
        <item name="colorSurface">@color/black</item>
    </style>

</resources>